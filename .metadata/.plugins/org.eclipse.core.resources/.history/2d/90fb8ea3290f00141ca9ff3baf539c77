package com.huuta.examplefrontend;

import java.awt.BorderLayout;
import java.awt.FlowLayout;
import java.util.ArrayList;

import javax.swing.DefaultComboBoxModel;
import javax.swing.JButton;
import javax.swing.JDialog;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;

import com.codefarm.interaction.FrontEnd;
import com.codefarm.interaction.User;
import javax.swing.GroupLayout;
import javax.swing.GroupLayout.Alignment;
import javax.swing.JComboBox;
import javax.swing.JLabel;
import javax.swing.LayoutStyle.ComponentPlacement;
import javax.swing.JTextField;

public class SetCodeDataDialog extends JDialog {

	private final JPanel contentPanel = new JPanel();
	private boolean _cancelled;
	private FrontEnd _frontEnd;
	private DefaultComboBoxModel<Object> _userSelectComboModel;
	private DefaultComboBoxModel<Object> _codeSelectComboModel;
	private JComboBox<Object> _userSelectComboBox;
	private JComboBox<Object> _codeSelectComboBox;
	private JTextField _codeDataText;
	
	/**
	 * Create the dialog.
	 */
	public SetCodeDataDialog(FrontEnd frontEnd) {
		_cancelled = false;
		_frontEnd = frontEnd;
		setResizable(false);
		setTitle("Set code data");
		setModal(true);
		Object[] usersArray = _frontEnd.getUsers().toArray();
		_userSelectComboModel = new DefaultComboBoxModel<Object>(usersArray);
		initialise();
	}
	
	private void updateCodeCombo(User user) {
		Object[] codesArray = _frontEnd.getCodesByUserId(user.getUserId()).toArray();
		_codeSelectComboModel = new DefaultComboBoxModel<Object>(codesArray);
		_codeSelectComboBox.setModel(_codeSelectComboModel);
	}
	
	private void initialise() {
		setBounds(100, 100, 450, 300);
		getContentPane().setLayout(new BorderLayout());
		contentPanel.setBorder(new EmptyBorder(5, 5, 5, 5));
		getContentPane().add(contentPanel, BorderLayout.CENTER);
		
		_userSelectComboBox = new JComboBox<Object>();
		_userSelectComboBox.setModel(_userSelectComboModel);
		
		JLabel lblSelectUser = new JLabel("Select User:");
		
		JLabel lblSelectCode = new JLabel("Select Code:");
		
		_codeSelectComboBox = new JComboBox<Object>();
		
		JLabel lblNewData = new JLabel("New Data:");
		
		_codeDataText = new JTextField();
		_codeDataText.setEnabled(false);
		_codeDataText.setColumns(10);
		GroupLayout gl_contentPanel = new GroupLayout(contentPanel);
		gl_contentPanel.setHorizontalGroup(
			gl_contentPanel.createParallelGroup(Alignment.LEADING)
				.addGroup(Alignment.TRAILING, gl_contentPanel.createSequentialGroup()
					.addContainerGap()
					.addGroup(gl_contentPanel.createParallelGroup(Alignment.TRAILING)
						.addComponent(_codeDataText, Alignment.LEADING, GroupLayout.DEFAULT_SIZE, 414, Short.MAX_VALUE)
						.addComponent(_userSelectComboBox, Alignment.LEADING, 0, 414, Short.MAX_VALUE)
						.addComponent(lblSelectUser, Alignment.LEADING)
						.addComponent(lblSelectCode, Alignment.LEADING)
						.addComponent(_codeSelectComboBox, Alignment.LEADING, 0, 414, Short.MAX_VALUE)
						.addComponent(lblNewData, Alignment.LEADING))
					.addContainerGap())
		);
		gl_contentPanel.setVerticalGroup(
			gl_contentPanel.createParallelGroup(Alignment.LEADING)
				.addGroup(gl_contentPanel.createSequentialGroup()
					.addContainerGap()
					.addComponent(lblSelectUser)
					.addPreferredGap(ComponentPlacement.RELATED)
					.addComponent(_userSelectComboBox, GroupLayout.PREFERRED_SIZE, GroupLayout.DEFAULT_SIZE, GroupLayout.PREFERRED_SIZE)
					.addGap(18)
					.addComponent(lblSelectCode)
					.addPreferredGap(ComponentPlacement.RELATED)
					.addComponent(_codeSelectComboBox, GroupLayout.PREFERRED_SIZE, GroupLayout.DEFAULT_SIZE, GroupLayout.PREFERRED_SIZE)
					.addGap(18)
					.addComponent(lblNewData)
					.addPreferredGap(ComponentPlacement.RELATED)
					.addComponent(_codeDataText, GroupLayout.DEFAULT_SIZE, 71, Short.MAX_VALUE)
					.addContainerGap())
		);
		contentPanel.setLayout(gl_contentPanel);
		{
			JPanel buttonPane = new JPanel();
			buttonPane.setLayout(new FlowLayout(FlowLayout.RIGHT));
			getContentPane().add(buttonPane, BorderLayout.SOUTH);
			{
				JButton okButton = new JButton("OK");
				okButton.setActionCommand("OK");
				buttonPane.add(okButton);
				getRootPane().setDefaultButton(okButton);
			}
			{
				JButton cancelButton = new JButton("Cancel");
				cancelButton.setActionCommand("Cancel");
				buttonPane.add(cancelButton);
			}
		}
	}
}
