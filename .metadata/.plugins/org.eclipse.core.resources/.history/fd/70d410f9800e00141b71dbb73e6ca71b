package com.huuta.examplefrontend;

import java.awt.BorderLayout;
import java.awt.FlowLayout;
import java.util.ArrayList;

import javax.swing.DefaultComboBoxModel;
import javax.swing.JButton;
import javax.swing.JDialog;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;

import com.codefarm.interaction.FrontEnd;
import com.codefarm.interaction.User;

public class SetCodeDataDialog extends JDialog {

	private final JPanel contentPanel = new JPanel();
	private boolean _cancelled;
	private FrontEnd _frontEnd;
	private DefaultComboBoxModel<Object> _userSelectComboModel;
	private DefaultComboBoxModel<Object> _codeSelectComboModel;
	
	/**
	 * Create the dialog.
	 */
	public SetCodeDataDialog(FrontEnd frontEnd) {
		_cancelled = false;
		_frontEnd = frontEnd;
		setResizable(false);
		setTitle("Set code data");
		setModal(true);
		Object[] UsersArray = _frontEnd.getUsers().toArray();
		_userSelectComboModel = new DefaultComboBoxModel<Object>(UsersArray);
		_codeSelectComboModel = new DefaultComboBoxModel<Object>();
		initialise();
	}
	
	private void initialise() {
		setBounds(100, 100, 450, 300);
		getContentPane().setLayout(new BorderLayout());
		contentPanel.setLayout(new FlowLayout());
		contentPanel.setBorder(new EmptyBorder(5, 5, 5, 5));
		getContentPane().add(contentPanel, BorderLayout.CENTER);
		{
			JPanel buttonPane = new JPanel();
			buttonPane.setLayout(new FlowLayout(FlowLayout.RIGHT));
			getContentPane().add(buttonPane, BorderLayout.SOUTH);
			{
				JButton okButton = new JButton("OK");
				okButton.setActionCommand("OK");
				buttonPane.add(okButton);
				getRootPane().setDefaultButton(okButton);
			}
			{
				JButton cancelButton = new JButton("Cancel");
				cancelButton.setActionCommand("Cancel");
				buttonPane.add(cancelButton);
			}
		}
	}

}
